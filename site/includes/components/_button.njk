{% macro button(text, href, as="a", color=false, newTab=false, class, size="large") %}
    <{{as}}
    {% if href %}
        href="{{href}}"
    {% endif %}
    {% if newTab %}
        target="_blank"
    {% endif %}
        class="btn btn-outline
        {% if color %} border-hue border-opacity-75 btn-highlight{% endif %}
        {{class}}">
        <span>{{text}}</span>
    </{{as}}>
{% endmacro %}

{% macro iconButton(as="a", onClick, href, icon, class, size) %}
    <{{as}}
        {% if onClick %}
            @click="{{onClick}}"
        {% endif %}
        {% if href %}
            href="{{href}}"
        {% endif %}
        class="inline-flex flex-shrink-0 items-center justify-center transition border-white border-opacity-75 btn-outline
        {% if size === "small" %}
            w-9 h-9
        {% else %}
            p-4
        {% endif %}
        {{class}}">
        <span class="block text-current
            {% if size === "small" %}
                w-2.5 h-2.5
            {% else %}
                w-3.5 h-3.5
            {% endif %}"
        >{% include icon %}</span>
    </{{as}}>
{% endmacro %}

{% macro textButton(text, href, as="a", color=false, newTab=false, class) %}
    <{{as}}
    {% if href %}
        href="{{href}}"
    {% endif %}
    {% if newTab %}
        target="_blank"
    {% endif %}
        class="relative bg-gray pb-1.5 pt-1 px-3 border overflow-hidden border-link border-opacity-25 rounded-full text-sm text-opacity-90 block text-link hover:border-link group-hover:border-link hover:border-opacity-60 group-hover:border-opacity-60 transition
        {% if color %} text-hue {% endif %}
        {{class}}">
        <span>{{text}}</span>
        <div class="absolute inset-0 transition-colors bg-opacity-0 bg-link group-hover:bg-opacity-5"></div>
    </{{as}}>
{% endmacro %}
