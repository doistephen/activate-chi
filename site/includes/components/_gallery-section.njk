<section id="gallery" class="relative w-screen py-24 overflow-hidden transform -translate-x-50 left-1/2">
    <div class="flex flex-nowrap w-max motion-safe:animate-marquee">
        <div class="flex flex-shrink-0 h-64 space-x-8 lg:space-x-20 md:h-80" data-marquee>
        {% for images in gallerySection.images %}
            <img loading="lazy" class="flex-shrink-0 object-cover w-auto h-full transition-all transform border border-white border-opacity-60 g-img" src="{{images}}" alt="">
        {% endfor %}
        <div>
    </div>
</section>

<style>
    .g-img:nth-child(1) {--tw-translate-y: 2rem;}
    .g-img:nth-child(2) {--tw-translate-y: -3rem;}
    .g-img:nth-child(3) {--tw-translate-y: 6rem;}
    .g-img:nth-child(4) {--tw-translate-y: 3rem;}
    .g-img:nth-child(5) {--tw-translate-y: -3rem;}
    .g-img:nth-child(6) {--tw-translate-y: 2rem;}
</style>
