<section id="intro" class="space-y-0">
    <header class="space-y-8">
        <div class="flex justify-center space-x-4 col-span-full h-80">
        {% for item in headerImages %}
            <div class="w-full">
                <img class="block object-cover w-full h-full border border-white border-opacity-50" src="{{item}}" alt="">
            </div>
        {% endfor %}
        </div>
        <h1 class="text-4xl leading-snug tracking-wide font-display">
            <span class="text-hue">Activate:Chi</span> {{introSection.introText}}
        </h1>
        <div class="flex flex-col items-start justify-between text-base col-span-full">
            <a href="#initiatives" class="inline-flex p-5 border-white border-opacity-75 btn-outline">
                <span class="block w-5 h-5 text-current">{% include "img/arrow.svg" %}</span>
            </a>
        </div>
    </header>
</section>
