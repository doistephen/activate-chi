    <section class="space-y-8">
        <header class="space-y-8">
            <div class="flex justify-center space-x-4 col-span-full h-80">
            {% for item in headerImages %}
                <div class="w-full">
                    <img class="block object-cover w-full h-full border border-white border-opacity-50" src="{{item}}" alt="">
                </div>
            {% endfor %}
            </div>

            <h1 class="text-4xl leading-snug tracking-wide font-display">
