<li class="grid py-8 text-base border-b border-white border-opacity-25 last:border-b-0 md:py-12 md:grid-cols-3 gap-y-2 md:gap-y-0 md:gap-x-6 lg:gap-x-0 lg:grid-cols-12">
    <div class="flex flex-col px-6 pl-0 space-y-2 text-lg border-white border-opacity-25 md:border-r lg:border-r-0 md:col-span-2 lg:col-span-4">
        <span class="text-xs text-hue text-opacity-90">{{item.data.category}}</span>
        <h3 class="text-lg font-bold leading-snug md:font-normal">{{item.data.title}}</h3>
        <a class="text-sm hover:underline text-link" target="_blank" href="{{item.data.statusLink}}">ref</a></p>
    </div>
    <div class="flex flex-row items-center row-start-3 py-8 border-white border-opacity-25 lg:justify-center md:flex-col lg:px-6 lg:col-span-3 md:col-start-3 md:row-start-1 md:row-end-3 lg:row-start-auto lg:row-end-auto">
        <h4 class="mr-8 tracking-widest text-white text-opacity-75 uppercase md:mr-0 lg:hidden text-xxs">A:C Rating:</h4>
        <div class="relative flex items-center justify-between w-full max-w-xs md:my-auto lg:my-0">
            <div style="left: calc(11.1111111111% * ({{item.data.rating}} - 1))"
                class="absolute z-10 p-1 transform left -translate-x-1/2 bg-gray
                {% if item.data.rating < 4 %}
                    text-hue
                {% elseif item.data.rating > 3 and item.data.rating < 8 %}
                    text-yellow
                {% elseif item.data.rating >= 8 %}
                    text-green
                {% endif %}">
                <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle r="6.5" vector-effect="non-scaling-stroke" transform="matrix(-1 0 0 1 7 7)" fill="currentColor" fill-opacity="0.25" stroke="currentColor"/>
                </svg>
                <span class="absolute text-sm text-white transform -translate-x-1/2 bottom-5 left-1/2 font-display text-opacity-90">{{item.data.rating}}</span>
            </div>
            <div class="flex-1 h-px bg-white bg-opacity-25"></div>
                <div class="absolute inset-x-0 flex justify-between w-full">
            {% for i in range(0, 4) %}
                <div class="p-0.5 bg-gray">
                    <div class="w-px h-1.5 bg-white bg-opacity-25 rounded-full"></div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
    <div class="pr-0 space-y-4 text-white border-white border-opacity-25 md:pt-2 lg:pt-0 text-opacity-90 md:border-r lg:border-r-0 lg:px-6 md:col-span-2 lg:col-span-5">
        <div class="space-y-1">
            <h4 class="font-bold text-white">We rate progress on this {{item.data.rating}} because:</h4>
            <p>{{item.data.statusDescription}} <a class="text-sm align-baseline text-link" target="_blank" href="{{item.data.statusLink}}"><span class="hover:underline">Read more about this</span> <span class="inline-block w-3 h-3">{% include "img/external-link.svg" %}</span></a></p>
        </div>
        {% if item.data.lastUpdated %}
            <span class="block text-sm text-white text-opacity-60">Last updated: {{item.data.lastUpdated}}</span>
        {% endif %}
    </div>
</li>
