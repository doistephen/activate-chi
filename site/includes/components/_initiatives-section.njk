 {% import "components/_initiative.njk" as initiative %}
<section id="initiatives">
    <div class="grid items-start justify-between grid-cols-12 gap-6 py-8">
        <div class="flex col-span-full">
            <h2 class="text-3xl tracking-wider text-white font-display">Our initiatives</h2>
        </div>
        <ul class="grid grid-cols-1 border-t border-white border-opacity-25 col-span-full"
            x-data="{ selected: `none` }">
            {% for item in collections.initiative %}
                {{ initiative.initiative(item.data.title, item.data.type, item.data.dates, item.data.summary, item.data.image) }}
            {% endfor %}
        </ul>
    </div>
</section>
