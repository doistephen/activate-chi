 {% import "components/_initiative.njk" as initiative %}
<section id="initiatives" class="pt-24">
    <div class="site-grid gap-y-6">
        <div class="flex justify-center col-span-full">
            <h2 class="text-xs tracking-wider rounded-full text-hue font-display">Our initiatives</h2>
        </div>
        <div class="flex col-span-full">
            <h3 class="text-3xl leading-normal tracking-wide text-center text-white font-display">{{initiativesSection.introText}}</h2>
        </div>
        {# <div class="col-span-full">{% include "components/_biden-tracker-section.njk" %}</div> #}
        <ul class="border-t border-white border-opacity-25 col-span-full"
            x-data="{ selected: `none` }">
            {% for item in collections.initiative.reverse() %}
                {{ initiative.initiative(item.data.title, item.data.type, item.data.dates, item.data.summary, item.data.image, item.data.links) }}
            {% endfor %}
        </ul>
    </div>
</section>
