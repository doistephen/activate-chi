 {% import "components/_get-involved-link.njk" as button %}

 {% macro footerLink(title, url, dot=false)%}
    <li class="flex items-start space-x-1 space-y-0.5 py-1.5 first:pt-0 last:pb-0">
        <a href="{{url}}" title="{{link.data.title}}" class="flex flex-col w-full text-base tracking-wide text-white text-opacity-75 hover:text-opacity-90 group">
            <span class="text-sm group-hover:underline">{{title}}</span>
        </a>
        {% if dot %}
            <span class="block w-1.5 h-1.5 rounded-full bg-opacity-60 bg-hue animate-pulse"></span>
        {% endif %}
    </li>
 {% endmacro %}

<footer class="pt-24">
    <div class="items-start px-4 pt-12 -mx-4 border-t border-white border-opacity-25 site-grid gap-y-6">
        <div class="flex flex-col items-center space-y-6 text-center md:items-start md:col-span-6 md:text-left">
            <div class="hidden w-8 h-8 md:block text-hue">{% include "img/chistar.svg" %}</div>
            <h2 class="max-w-md text-xl leading-relaxed font-display">{{site.footerHeading}}</h2>
            {{button.getInvolvedButton("Get involved", color="true")}}
        </div>
        <div class="hidden space-x-16 md:flex md:col-span-6">
            <div class="flex-shrink-0 space-y-4 lg:space-y-6">
                <h2 class="text-sm font-bold text-white">Links</h2>
                <ul>
                {% for link in [
                    {
                        title: "Our initiatives",
                        link: "/#initiatives"
                    },{
                        title: "About us",
                        link: "/#about"
                    },{
                        title: "Our organizers",
                        link: "/#organizers"
                    },{
                        title: "Blog",
                        link: "/blog"
                    },{
                        title: "Donate",
                        link: "https://www.paypal.com/donate?token=9CDwJ5HMmLS97lEIoEogwoKkx_CSBnE2JdQZThKEVq3hW3PY19c7ZapxbxQvMGvbmjyY-Er7YGQAKWWZ"
                    }, {
                        title: "Open organizer positions!",
                        link: "/open-positions",
                        dot: true
                    }
                ] %}
                    {{footerLink(link.title, link.link, link.dot)}}
                {% endfor %}
                </ul>
            </div>
            <div class="space-y-4 lg:space-y-6">
                <h2 class="text-sm font-bold text-white">Most recent public statements</h2>
                <ul>
                {% for link in collections.announcements.reverse().slice(0, 3) %}
                    <li class="py-2 first:pt-0 last:pb-0">
                        <a href="{{link.url}}" title="{{link.data.title}}" class="flex flex-col space-y-1 text-base tracking-wide text-white text-opacity-90 group">
                            <span class="text-sm text-white text-opacity-75 group-hover:underline">{{link.data.title}}</span>
                            <date class="text-opacity-75 text-xxs text-hue">{{link.data.date | readableDate}}</date>
                        </a>
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</footer>
