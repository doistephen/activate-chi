<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <title>{% if title %} {{ title }} | {% endif %} {{ site.siteName }}</title>
  <meta property="og:title" content="{% if title %} {{ title }} | {% endif %} {{ site.siteName }}"/>

  <meta name="description" content="{% if socialSnippet %}{{ socialSnippet}}{% else %}{{site.socialSnippet}}{% endif %}">
  <meta property="og:description" content="{% if socialSnippet %}{{ socialSnippet}}{% else %}{{site.socialSnippet}}{% endif %}"/>

  <link rel="canonical" href="{{ site.permalink }}{{ page.url }}">
  <meta property="og:url" content="{{ site.permalink }}{{ page.url }}" />

  <meta name="twitter:card" content="summary_large_image">
  <meta property="og:image" content="{{site.socialGraphic}}"/>
  <meta property="twitter:image" content="{{site.socialGraphic}}"/>
  <meta property="og:image:width" content="2400" />
  <meta property="og:image:height" content="1350" />
  <meta property="og:image:alt" content="{{site.socialSnippet}}" />


  {% if helpers.environment == "development" %}
  <link rel="stylesheet" href="/css/main.css">
  {% else %}
  {# else, use the minified css file for production #}
  <link rel="stylesheet" href="/css/main.css">
  {% endif %}

  {% if helpers.environment == "development" %}
  <script src="/js/main.js" defer></script>
  {% else %}
  <script src="/js/main.min.js" defer></script>
  {% endif %}

<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

  {# include social meta tags #}
  {% include "components/_social-meta.njk" %}

  {# lastly include favicon, fonts, etc #}
  <link rel="icon" type="image/png" href="{{ site.favicon }}">
  <link rel="stylesheet" href="https://use.typekit.net/xvb5dev.css">
  <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>


</head>
