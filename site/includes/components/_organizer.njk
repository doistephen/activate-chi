{% macro organizer(name, job, summary, image)%}
<li class="flex items-center py-3 space-x-6">
    <div class="flex flex-grow space-x-6">
        <div class="flex-shrink-0 w-20 overflow-hidden border border-white border-opacity-50 rounded-full h-28">
            <img class="object-cover w-full h-full" src="{{image}}" alt="">
        </div>
        <div class="flex flex-col justify-center flex-grow">
            <h3 class="text-base font-display">{{name}}</h3>
            <p class="text-base text-white text-opacity-50">{{job}}</p>
        </div>
    </div>
    <button class="w-8 h-8 rounded-full p-2-5 btn-outline">
        {% include "img/plus.svg" %}
    </button>
</li>
{% endmacro %}
