<a href="{{item.fileSlug}}" class="flex p-5 space-x-16 border border-white border-opacity-25 group focus:outline-none">
    <div class="flex flex-col justify-between">
        <div class="flex flex-col items-start flex-1 p-1 space-y-6">
            <date class="block text-xs col-span-full text-hue">{{page.date | readableDate}}</date>
            <div class="flex flex-col -space-y-0.5">
                <h2 class="font-display">{{item.data.title}}</h2>
                <span class="text-base text-white text-opacity-50">By {{item.data.author}}</span>
            </div>
            <div class="grid px-5 pt-3 pb-2 text-xs tracking-wide text-center grid-absolute btn-outline font-display group-focus:ring">
                <span :class="{'opacity-0' : selected === '{{title}}'}" class="grid-inset-0">Read essay</span>
            </div>
        </div>
        <div class="w-12 h-px mt-auto border-b border-white border-opacity-25"></div>
    </div>
    <div class="flex-1 h-64 max-w-lg overflow-hidden border border-white border-opacity-50 w-md">
        <img class="object-cover w-full h-full" src="{{item.data.image}}" alt="">
    </div>
</a>
