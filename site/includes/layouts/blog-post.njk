---
layout: default
---
<main class="space-y-16">
    <img class="block object-cover w-full h-48 border border-white border-opacity-50 sm:h-64 md:h-72 lg:h-80" src="{{image}}" alt="">
    <article class="grid items-start grid-cols-1 lg:grid-cols-12 gap-x-12 gap-y-6">
        <div class="flex flex-col pb-6 space-y-6 border-b border-white border-opacity-25 lg:p-8 lg:border lg:col-span-5">
            <date class="block text-sm text-hue">{{page.date | readableDate}}</date>
            <div class="space-y-4">
                <h1 class="text-3xl leading-snug tracking-wide font-display">{{title}}</h1>
                <div class="flex items-center space-x-4">
                    <img class="object-cover w-12 h-12 overflow-hidden border border-white border-opacity-50 rounded-full" src="{{authorPortrait}}" alt="">
                    <span class="text-lg text-white text-opacity-75">by {{author}}</span>
                </div>
            </div>
            <div class="hidden w-12 pt-24 border-b border-white border-opacity-50 lg:block"></div>
        </div>
        <div class="prose lg:col-span-7">
            {{ content | safe }}
        </div>
    </article>
</main>
