---
layout: default
---
<main class="space-y-16">
    <img loading="lazy" class="block object-cover w-full h-48 border border-white border-opacity-60 sm:h-64 md:h-72 lg:h-80" src="{{image}}" alt="">
    <article class="site-grid gap-y-6">
        <div class="flex flex-col pb-6 space-y-6 border-b border-white border-opacity-25 lg:p-8 lg:border md:col-span-full lg:col-span-5">
            <date class="block text-sm text-hue">{{page.date | readableDate}}</date>
            <div class="space-y-4">
                <h1 class="text-3xl leading-snug">{{title}}</h1>
                <div class="flex items-center space-x-4">
                    <img loading="lazy" class="object-cover w-12 h-12 overflow-hidden border border-white rounded-full border-opacity-60" src="{{authorPortrait}}" alt="">
                    <span class="text-lg text-white text-opacity-75">by {{author}}</span>
                </div>
            </div>
            <div class="hidden w-12 pt-24 border-b border-white border-opacity-60 lg:block"></div>
            <ul class="flex items-center">
                <span class="pr-1 text-sm text-white text-opacity-75">Share:</span>
                <li><a target="_blank" href="https://twitter.com/intent/tweet?text=Read%20{{title}}%20by%20{{author}}%20{{site.permalink}}{{page.url}}" class="block p-2.5 text-white transition transform rounded-full text-opacity-90 hover:scale-105 hover:text-opacity-100 focus:outline-none focus:ring-2"><span class="block w-5 h-5">{% include "img/twitter.svg" %}</span></a></li>
                <li><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{site.permalink}}{{page.url}}" class="block p-2.5 text-white transition transform rounded-full text-opacity-90 hover:scale-105 hover:text-opacity-100 focus:outline-none focus:ring-2"><span class="block w-5 h-5">{% include "img/facebook.svg" %}</span></a></li>
            </ul>
        </div>
        <div class="prose lg:col-span-7 md:col-span-full">
            {{ content | safe }}
        </div>
    </article>
</main>

    {% include "components/_footer.njk" %}
