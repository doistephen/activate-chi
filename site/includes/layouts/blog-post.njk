---
layout: default
---
<main class="space-y-16">
    <img class="block object-cover w-full border border-white border-opacity-50 h-72" src="{{image}}" alt="">
    <article class="grid grid-cols-12 gap-x-12 gap-y-6">
                <date class="block text-sm col-span-full text-hue">{{page.date | readableDate}}</date>
        <div class="col-span-5">
            <h1 class="text-4xl leading-snug tracking-wide font-display">{{title}}</h1>
            <span class="text-white text-opacity-75 ">by {{author}}</span>
        </div>
        <div class="col-span-7 prose">
            {{ content | safe }}
        </div>
    </article>
</main>
